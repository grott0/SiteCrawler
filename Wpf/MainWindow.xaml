<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="238.15">
    <StackPanel>
        <ComboBox Height="30" Width="200" Name="MyListBox" ItemsSource="{Binding Integers}"></ComboBox>
        <Button Height="30" Width="70" Margin="0 5 0 0" Name="MyButton" Command="{Binding DoWorkCommand}" Grid.Row="1">DoWork</Button>
        <CheckBox IsChecked="{Binding Completed}"></CheckBox>
        <TextBlock Height="200" Margin="-3,5,3,0" Text="{Binding ProgressText}"></TextBlock>
    </StackPanel>

</Window>
